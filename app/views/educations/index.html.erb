<div class='container content'>
  <div class='row'>
    <div class='col-md-12'>
      <p id="notice"><%= notice %></p>

      <h1>My Qualifications</h1>
      <br>

      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>Institution</th>
            <th>Year started</th>
            <th>Year finished</th>
            <th>Institution type</th>
            <th>Course</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @educations.each do |education| %>
            <tr>
              <td><%= education.institution %></td>
              <td><%= education.year_started %></td>
              <td><%= education.year_finished %></td>
              <td><%= education.institution_type %></td>
              <td><%= education.course %></td>
              <td><%= link_to 'Show', education %></td>
              <td><%= link_to 'Edit', edit_education_path(education) %></td>
              <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Education', new_education_path %>

    </div>
  </div>
</div>